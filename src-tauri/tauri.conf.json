{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "字体管理器",
  "version": "0.1.0",
  "identifier": "com.font-manager.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "beforeBundleCommand": "node ./src-tauri/scripts/clean-bundle.cjs",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "字体管理器",
        "width": 1000,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 700,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "template": "nsis/installer.nsi",
        "installerIcon": "icons/icon.ico",
        "languages": ["SimpChinese"],
        "displayLanguageSelector": false,
        "installMode": "perMachine"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
